extends layout

block content
  h1(style="background-color: #f0f0f0; padding: 10px;") Aba de Games

  .container.mt-5(style="background-color: #fff; padding: 20px;")
    h1.text-center(style="color: #333;") Need For Speed
    p(style="color: #555;") Uma otima saga de jogos de corrida de muito tempo feita para todas as plataformas atuais

    #carouselExampleIndicators.carousel.slide(data-ride="carousel")
      ol.carousel-indicators
        li(data-target="#carouselExampleIndicators", data-slide-to="0", class="active")
        li(data-target="#carouselExampleIndicators", data-slide-to="1")
        li(data-target="#carouselExampleIndicators", data-slide-to="2")

      .carousel-inner
        .carousel-item.active
          img.d-block.w-100(src="https://image.api.playstation.com/vulcan/ap/rnd/202210/3121/XemhVDBuAEVrQXUkJF57ZsdX.jpg", alt="need for speed heat")
        .carousel-item
          img.d-block.w-100(src="https://cdn1.epicgames.com/spt-assets/5d07664430944a95ae550da120ed0eeb/need-for-speed-most-wanted-a2ek1.jpg", alt="need for speed most wanted")
        .carousel-item
          img.d-block.w-100(src="https://image.api.playstation.com/vulcan/ap/rnd/202211/2510/VOSSvGjCpMF0uj9qQtmW6AnH.png", alt="need for speed payback")

      a.carousel-control-prev(href="#carouselExampleIndicators", role="button", data-slide="prev")
        span.carousel-control-prev-icon(aria-hidden="true")
        span.sr-only Anterior

      a.carousel-control-next(href="#carouselExampleIndicators", role="button", data-slide="next")
        span.carousel-control-next-icon(aria-hidden="true")
        span.sr-only Pr√≥ximo

