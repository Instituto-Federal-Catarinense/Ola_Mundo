<!doctype html>
<html>
<head>
    <title>{{ title }}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        .content-box {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
        }
        .item-card {
            width: 200px;
            height: 200px;
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            text-align: center;
            margin: 10px;
        }
        .item-card img {
            width: 100%;
            height: 100px;
            object-fit: cover;
        }
        .item-card h5 {
            margin: 10px 0;
        }
        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Inicio</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/esportes">Esportes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users">Usu√°rios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/games">Jogos</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-4">
        <div class="header-content">
            <h1>{{ title }}</h1>
            <a href="/games" class="btn btn-secondary">Voltar para Jogos</a>
        </div>
        <div class="content-box">
            <div class="d-flex flex-wrap justify-content-center">
                <div class="item-card">
                    <a href="/games/roblox">
                        <img src="https://play-lh.googleusercontent.com/WNWZaxi9RdJKe2GQM3vqXIAkk69mnIl4Cc8EyZcir2SKlVOxeUv9tZGfNTmNaLC717Ht" alt="Roblox">
                        <h5>Roblox</h5>
                    </a>
                </div>
                <div class="item-card">
                    <a href="/games/rl">
                        <img src="https://www.rocketleague.com/images/keyart/rl_evergreen.jpg" alt="Rocket League">
                        <h5>Rocket League</h5>
                    </a>
                </div>
                <div class="item-card">
                    <a href="/games/vava">
                        <img src="https://yt3.googleusercontent.com/4yd18H4ALHVFfjPPAnOYviNXm2dmQcR2dZru10wXA3ZkPJRkEV6yCuIodHnhJGG2e6mCGio=s900-c-k-c0x00ffffff-no-rj" alt="Valorant">
                        <h5>Valorant</h5>
                    </a>
                </div>
                <div class="item-card">
                    <a href="/games/mine">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTSbWOL6AqgFI9M4eblTENTH_X5OYkzBMpvZA&s" alt="Minecraft">
                        <h5>Minecraft</h5>
                    </a>
                </div>
                <div class="item-card">
                    <a href="/games/nfs">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSJZvWtOSLGoprI-V0x8prLWOujahmgXvI2mw&s" alt="Need For Speed">
                        <h5>Need For Speed</h5>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
