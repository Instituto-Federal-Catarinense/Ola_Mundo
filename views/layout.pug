doctype html
html(lang="pt-BR")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    style.
      body {
        font-family: 'Arial', sans-serif;
        padding-top: 60px; /* Adiciona espaço para a navbar fixa */
      }
      .header {
        background-color: #343a40;
        color: white;
        padding: 10px 0;
        position: fixed; /* Navbar fixa no topo */
        width: 100%;
        z-index: 1000; /* Garante que a navbar esteja acima do conteúdo */
      }
      .header h1, .footer p {
        margin: 0;
        padding: 0 20px;
      }
      .main-content {
        padding: 80px 0 20px; /* Ajuste o padding para evitar sobreposição com a navbar */
        text-align: center;
      }
      .navbar-nav .nav-link {
        color: white;
      }
  body
    // Cabeçalho com Navbar
    header.header
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        .container
          a.navbar-brand(href="/") Index
          button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon
          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav
              li.nav-item
                a.nav-link(href="/users") Usuários
              li.nav-item
                a.nav-link(href="/esportes") Esportes
                              li.nav-item
                a.nav-link(href="/musicas") Musicas

    // Conteúdo Principal
    main.main-content
      .container.text-center
        block content

    // Rodapé
    footer.footer.text-center
      .container
        p &copy; 2024 Meu Site Incrível. Todos os direitos reservados.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
