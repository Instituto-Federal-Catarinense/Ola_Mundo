extends layout

block content
  h1= title
  p gremio o maior 

  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Grêmio
    // Adicionando Bootstrap para o carrossel
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    // Estilos personalizados
    style.
      .carousel-item img
        width: 100%;
        height: auto;
  body
    
    .container.mt-5
      h1.text-center Ídolos:Grêmio O Maior Time do Sul
      #carouselExampleIndicators.carousel.slide(data-ride="carousel")
        ol.carousel-indicators
          li(data-target="#carouselExampleIndicators", data-slide-to="0", class="active")
          li(data-target="#carouselExampleIndicators", data-slide-to="1")
          li(data-target="#carouselExampleIndicators", data-slide-to="2")
        .carousel-inner
          .carousel-item.active
            img.d-block.w-100(src="https://img.nsctotal.com.br/wp-content/uploads/legacy/styles/paragraph_image_style/s3/imagesrc/3343351.jpg", alt="Gallato")
          .carousel-item
            img.d-block.w-100(src="https://s2-autoesporte.glbimg.com/y1XgqSXZ6_KhycOSjezOWne1PAs=/0x0:300x300/984x0/smart/filters:strip_icc()/i.s3.glbimg.com/v1/AUTH_cf9d035bf26b4646b105bd958f32089d/internal_photos/bs/2020/M/q/7CmpsQQr6OT48cJ1CVlA/2014-01-10-renato-gaucho.jpg", alt="Renato Gaúcho")
          .carousel-item
            img.d-block.w-100(src="https://images.futebolinterior.com.br/2021/04/0002050358452_img.jpg", alt="Tarciso")
        a.carousel-control-prev(href="#carouselExampleIndicators", role="button", data-slide="prev")
          span.carousel-control-prev-icon(aria-hidden="true")
          span.sr-only Anterior
        a.carousel-control-next(href="#carouselExampleIndicators", role="button", data-slide="next")
          span.carousel-control-next-icon(aria-hidden="true")
          span.sr-only Próximo
    // Scripts do Bootstrap
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
