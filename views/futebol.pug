doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    // Bootstrap CSS para o carrossel
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
    // Estilos personalizados
    style.
      /* Estilos adicionais personalizados */
      /* Aqui você pode adicionar estilos específicos se necessário */
  body
    // texto
    h1.text-center.mt-5 Aqui falamos sobre futebol
    // Parágrafo abaixo do H1
    p.text-center Aqui você encontrará informações interessantes sobre diversos jogos de futebol. Acompanhe nossos artigos para ficar por dentro das últimas notícias e eventos do imortal grebio.
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href='#') Logo
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      div.collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ml-auto
          li.nav-item.active
            a.nav-link(href='/') Inicio
          li.nav-item
            a.nav-link(href='/esportes/surf') Surf
          li.nav-item
            a.nav-link(href='/esportes/futebol') Futebol
          li.nav-item
            a.nav-link(href='/esportes/corrida') Corrida
            li.nav-item.active
            a.nav-link(href='/esportes/basquete') Basquete
          li.nav-item
            a.nav-link(href='/esportes') Esportes

    // Carrossel de imagens
    .carousel.slide(id='carouselExampleIndicators', data-ride='carousel')
      ol.carousel-indicators
        li(data-target='#carouselExampleIndicators', data-slide-to='0', class='active')
        li(data-target='#carouselExampleIndicators', data-slide-to='1')
        li(data-target='#carouselExampleIndicators', data-slide-to='2')
      .carousel-inner
        .carousel-item.active
          img.d-block.w-100(src='https://i0.wp.com/prdnetshoes.wpcomstaging.com/wp-content/uploads/2021/09/curiosidadesgremio20210902.jpeg?fit=1256%2C500&ssl=1', alt='First slide')
        .carousel-item
          img.d-block.w-100(src='https://st2.depositphotos.com/2124563/8893/i/450/depositphotos_88938870-stock-illustration-flag-football-club-barcelona-spain.jpg', alt='Second slide')
        .carousel-item
          img.d-block.w-100(src='https://i.pinimg.com/736x/bd/00/d4/bd00d439f6674699983157d0ec76ca3e.jpg', alt='Third slide')
      a.carousel-control-prev(href='#carouselExampleIndicators', role='button', data-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#carouselExampleIndicators', role='button', data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next

    // Conteúdo principal
    block content

    // Footer
    footer.footer.mt-auto.py-3.bg-light
      .container.text-center
        span.text-muted Numero de contato de miguel é 9999999999.

    // JavaScript e bibliotecas
    // jQuery, Popper.js e Bootstrap JS para o carrossel
    script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js')
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@1.16.1/dist/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')
