doctype html
html
  head
    title Estilos musicais para o seu dia!
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-danger
      .container
        a.navbar-brand(href='#') Navbar Vermelha
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href='/') Inicio
            li.nav-item
              a.nav-link(href='/musicas') Músicas
            li.nav-item
              a.nav-link(href='/musicas/funk') Funk 
            li.nav-item
              a.nav-link(href='/musicas/country') Country
            li.nav-item
              a.nav-link(href='/musicas/bossanova') Bossa Nova
            li.nav-item
              a.nav-link(href='/musicas/pop') POP Internacional

    .container.mt-4
      h2 Carrossel de Exemplo
      .row
        .col-md-8.offset-md-2
          .carousel.slide(data-ride='carousel', id='carouselExampleSlidesOnly')
            .carousel-inner
              .carousel-item.active
                img.d-block.w-100(src='https://i.ytimg.com/vi/soUtSRmDQ7k/hq720.jpg?sqp=-oaymwE7CK4FEIIDSFryq4qpAy0IARUAAAAAGAElAADIQj0AgKJD8AEB-AH-CYAC0AWKAgwIABABGH8gPSgrMA8=&rs=AOn4CLChoXn9ygWwq3AB0M9vmSwgaSDbhA', alt='Primeiro Slide')
              .carousel-item
                img.d-block.w-100(src='https://i.uai.com.br/Ut7E6EXP-DZYrba6AS3gOt6D9os=/750x0/imgsapp2.uai.com.br/app/noticia_133890394703/2021/09/17/278738/20210921105031361977e.jpg', alt='Segundo Slide')
              .carousel-item
                img.d-block.w-100(src='https://img.freepik.com/fotos-gratis/cena-relacionada-a-musica-em-3d_23-2151125009.jpg?size=626&ext=jpg&ga=GA1.1.2008272138.1720828800&semt=ais_user', alt='Terceiro Slide')
            a.carousel-control-prev(href='#carouselExampleSlidesOnly', role='button', data-slide='prev')
              span.carousel-control-prev-icon(aria-hidden='true')
              span.sr-only Anterior
            a.carousel-control-next(href='#carouselExampleSlidesOnly', role='button', data-slide='next')
              span.carousel-control-next-icon(aria-hidden='true')
              span.sr-only Próximo

    footer.footer.bg-light.text-center.mt-4.py-3
      .container
