extends layout

block content
  h1(style="background-color: #f0f0f0; padding: 10px;") Aba de Games

  .container.mt-5(style="background-color: #fff; padding: 20px;")
    h1.text-center(style="color: #333;") God of War
    p(style="color: #555;") Um ótimo jogo single player feitos para playstation e pc

    #carouselExampleIndicators.carousel.slide(data-ride="carousel")
      ol.carousel-indicators
        li(data-target="#carouselExampleIndicators", data-slide-to="0", class="active")
        li(data-target="#carouselExampleIndicators", data-slide-to="1")
        li(data-target="#carouselExampleIndicators", data-slide-to="2")

      .carousel-inner
        .carousel-item.active
          img.d-block.w-100(src="https://t2.tudocdn.net/322640?w=824&h=494", alt="kratos")
        .carousel-item
          img.d-block.w-100(src="https://image.api.playstation.com/vulcan/ap/rnd/202207/1210/6zhGBKQpPrlLNI2a7EfALNs1.png", alt="kratos e atreus")
        .carousel-item
          img.d-block.w-100(src="https://tm.ibxk.com.br/2022/07/20/20174355450217.jpg", alt="kratos grecia")

      a.carousel-control-prev(href="#carouselExampleIndicators", role="button", data-slide="prev")
        span.carousel-control-prev-icon(aria-hidden="true")
        span.sr-only Anterior

      a.carousel-control-next(href="#carouselExampleIndicators", role="button", data-slide="next")
        span.carousel-control-next-icon(aria-hidden="true")
        span.sr-only Próximo

block backButton
  a(href='/esportes') Voltar


  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  title Surf

  // Adicionando Bootstrap para o carrossel
  link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")

  // Estilos personalizados
  style.
    body
      background-color: #f8f9fa;
    
    .container
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      padding: 20px;
      margin-top: 20px;

    .carousel-item img
      width: 100%;
      height: auto;

  // Scripts do Bootstrap
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
