extends layout

block content
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container

  .container-fluid(style="overflow-y: hidden;")

    // Banner com título e botão
    .jumbotron(style="margin-top: 20px;")
      h1(display-4) Bem-vindo à Tela Inicial
      p.lead Este é um exemplo de uma página completa.

    // Seção de imagens
    .image-grid(style="display: flex; justify-content: space-between; margin-top: 20px; overflow-x: auto; padding-bottom: 20px;")
      each image in ['https://i.pinimg.com/236x/da/66/93/da66938e3735a6afbc73d8a6d081706e.jpg', 'https://i.pinimg.com/236x/85/87/c2/8587c25434bd5bdbe7ae0b2b445c93ea.jpg', 'https://i.pinimg.com/236x/40/bc/a2/40bca27f5743f5b9b7a61edab7f825e7.jpg']
        .image-square(style="width: 100px; height: 100px; border: 2px solid #ccc; margin-right: 10px; cursor: pointer;" onclick=`moveImage(this)`)
          img(src=image, alt='Imagem' style="width: 100%; height: 100%; object-fit: cover;")

    // Botão para contar cliques
    button#clickButton(style="display: block; margin: 20px auto; padding: 10px 20px; background-color: #007bff; color: #fff; border: none; cursor: pointer;") Contar Cliques
    p#clickCount(style="text-align: center; margin-bottom: 20px;") Total de cliques: #{clicks}


  // Scripts
  script(src="https://code.jquery.com/jquery-3.6.0.min.js")
  script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js")
  script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
  script.
    // Script para mover imagens
    function moveImage(image) {
      const images = document.querySelectorAll('.image-square');
      const clickedImage = image.parentNode;
      const lastImage = images[images.length - 1];

      // Troca as posições visualmente
      clickedImage.parentNode.insertBefore(clickedImage, lastImage.nextSibling);
    }

    // Script para contar cliques
    let clickCount = 0;
    const clickButton = document.getElementById('clickButton');
    const clickCountDisplay = document.getElementById('clickCount');

    clickButton.addEventListener('click', function() {
      clickCount++;
      clickCountDisplay.textContent = `Total de cliques: ${clickCount}`;
    });
