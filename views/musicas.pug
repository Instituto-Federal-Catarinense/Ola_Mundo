extends layout

block content
  h1= title
  p Bem-vindo à página #{title}

  // Conteúdo Principal
  main.main-content
    .container.text-center
      // Primeira Linha de Quadrados
      .row.row-cols-1.row-cols-md-2.row-cols-lg-3.g-4
        // Quadrado - Funk
        .col.mb-4
          a(href="/musicas/funk")
            .border.text-center.p-4
              img.img-fluid(src="https://img.freepik.com/vetores-gratis/o-funk-grafite-vector_23-2147497930.jpg", alt="Funk")
              h5.text-dark Funk
              p.text-muted Música do Funk

        // Quadrado - Pop
        .col.mb-4
          a(href="/musicas/pop")
            .border.text-center.p-4
              img.img-fluid(src="https://image.slidesharecdn.com/apresentao2-130614122607-phpapp02/85/POP-MUSIC-1-320.jpg", alt="Pop")
              h5.text-dark Pop
              p.text-muted Música do Pop

        // Quadrado - Rock
        .col.mb-4
          a(href="/musicas/rock")
            .border.text-center.p-4
              img.img-fluid(src="https://i.pinimg.com/originals/5e/97/5e/5e975eeebd6bd1d1691d58ca6ab89091.jpg", alt="Rock")
              h5.text-dark Rock
              p.text-muted Música do Rock

        // Quadrado - Romântica
        .col.mb-4
          a(href="/musicas/romantica")
            .border.text-center.p-4
              img.img-fluid(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTKxxLfOQ6NNkDFkeQy-rL7BnZpBAmZJPKKwA&s", alt="Romântica")
              h5.text-dark Romântica
              p.text-muted Música Romântica

    // Rodapé (igual ao layout fornecido)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
