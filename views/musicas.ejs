<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sua Biblioteca de Músicas</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <header class="bg-gray-800 text-white py-4">
    <div class="container mx-auto flex justify-between items-center px-4">
      <h1 class="text-2xl font-semibold">Biblioteca de Músicas</h1>
      <nav>
        <a href="/" class="text-gray-300 hover:text-white px-3 py-2">Início</a>
        <a href="/esportes/" class="text-gray-300 hover:text-white px-3 py-2">Esportes</a>
      </nav>
    </div>
  </header>

  <div class="container mx-auto py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% musicas.forEach(function(musica) { %>
        <div class="bg-white p-4 rounded-lg shadow-md">
          <h2 class="text-xl font-semibold mb-2"><%= musica.titulo %></h2>
          <p class="text-gray-700 mb-2">Artista: <%= musica.artista %></p>
          <p class="text-gray-500 text-sm">Gênero: <%= musica.genero %></p>
          <p class="text-gray-500 text-sm">Ano: <%= musica.ano %></p>
        </div>
      <% }); %>
    </div>
  </div>
  <footer class="bg-gray-800 text-white py-4 mt-8">
    <div class="container mx-auto text-center">
      <p>&copy; 2024 Sua Biblioteca de Músicas. Todos os direitos reservados.</p>
    </div>
  </footer>
</body>
</html>
