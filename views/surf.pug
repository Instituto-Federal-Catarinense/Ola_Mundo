extends layout

block content
  h1 Aba de Esportes de Surf

block backButton
  a(href='/esportes') Voltar
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Surf
    // Adicionando Bootstrap para o carrossel
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    // Estilos personalizados
    style.
      .carousel-item img
        width: 100%;
        height: auto;
  body
    
    .container.mt-5
      h1.text-center Grandes Surfistas 
      p esses são os grandes surfistas da história
      #carouselExampleIndicators.carousel.slide(data-ride="carousel")
        ol.carousel-indicators
          li(data-target="#carouselExampleIndicators", data-slide-to="0", class="active")
          li(data-target="#carouselExampleIndicators", data-slide-to="1")
          li(data-target="#carouselExampleIndicators", data-slide-to="2")
        .carousel-inner
          .carousel-item.active
            img.d-block.w-100(src="https://veja.abril.com.br/wp-content/uploads/2021/07/Gabriel-Medina.jpeg?crop=1&resize=1212,909", alt="Medina")
          .carousel-item
            img.d-block.w-100(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT8NmcBYywTO-PgU7fj5QAN2J-KKytaz-OZZA&s", alt="Jhon Jhon Florence")
          .carousel-item
            img.d-block.w-100(src="https://www.olimpiadatododia.com.br/wp-content/uploads/2023/02/Felipe-Toledo-conquista-titulo-da-etapa-de-Sunset-Beach.jpg", alt="Filipe Toledo")
        a.carousel-control-prev(href="#carouselExampleIndicators", role="button", data-slide="prev")
          span.carousel-control-prev-icon(aria-hidden="true")
          span.sr-only Anterior
        a.carousel-control-next(href="#carouselExampleIndicators", role="button", data-slide="next")
          span.carousel-control-next-icon(aria-hidden="true")
          span.sr-only Próximo
    // Scripts do Bootstrap
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")