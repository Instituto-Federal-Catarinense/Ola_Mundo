{{> layout}}

{{#content}}
  <h1>{{title}}</h1>

  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="card">
        <img class="card-img-top" src="{{image}}" alt="{{altText}}" style="height: 300px; object-fit: cover;">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text">{{description}}</p>
        </div>
      </div>
    </div>
  </div>
{{/content}}
