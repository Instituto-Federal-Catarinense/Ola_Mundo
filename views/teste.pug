extends layout

block content
  h1 Teste de Página Pug
  p Este é um exemplo de conteúdo para uma página usando Pug.

  // Exemplo de lista
  ul
    li Item 1
    li Item 2
    li Item 3

  // Exemplo de tabela
  table
    tr
      th Nome
      th Idade
    tr
      td João
      td 30
    tr
      td Maria
      td 25

  // Estilos CSS inline para exemplo
  style.
    h1 {
      color: #333;
    }
    p {
      font-size: 16px;
      color: #666;
    }
    ul {
      text-align: left;
      margin-top: 20px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
    }
