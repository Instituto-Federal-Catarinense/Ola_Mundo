<!doctype html>
<html>
<head>
    <title>{{ title }}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        .item-card {
            width: 200px;
            height: 200px;
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            text-align: center;
            margin: 10px;
        }
        .item-card img {
            width: 100%;
            height: 100px;
            object-fit: cover;
        }
        .item-card h5 {
            margin: 10px 0;
        }
        .navbar-center {
            flex-grow: 1;
            text-align: center;
        }
        .navbar-center .navbar-brand {
            float: none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="navbar-center">
            <a class="navbar-brand" href="/">Inicio</a>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/esportes">Esportes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users">Usuários</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/games">Jogos</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1>{{ title }}</h1>
            <a href="/" class="btn btn-secondary">Voltar</a>
        </div>
        <div class="d-flex flex-wrap justify-content-center mt-4">
            <div class="item-card">
                <a href="/esportes/surf">
                    <img src="https://sportsmatik.com/uploads/matik-sports-corner/matik-know-how/surfing_1562581974.jpg" alt="Surf">
                    <h5>Surf</h5>
                </a>
            </div>
            <div class="item-card">
                <a href="/esportes/futebol">
                    <img src="https://img.freepik.com/fotos-gratis/jogador-de-futebol-masculino-com-bola-no-campo-de-grama_23-2150821530.jpg?size=338&ext=jpg&ga=GA1.1.2008272138.1721952000&semt=sph" alt="Futebol">
                    <h5>Futebol</h5>
                </a>
            </div>
            <div class="item-card">
                <a href="/esportes/natacao">
                    <img src="https://www.amaralnatacao.com.br/wp-content/uploads/Depositphotos_9501246_m-2015-1.jpg" alt="Natação">
                    <h5>Natação</h5>
                </a>
            </div>
            <div class="item-card">
                <a href="/esportes/basquete">
                    <img src="https://portalconteudoaberto.com.br/wp-content/uploads/2023/08/lebron-james-nba-recorde-1.webp" alt="Basquete">
                    <h5>Basquete</h5>
                </a>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
